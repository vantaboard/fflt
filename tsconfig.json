{
  "compilerOptions": {
    "target": "es6",
    "module": "es2022",
    "strict": true,
    "outDir": "lib/",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"]
}
